<%= form_for @restaurant do |r| %>

  <%= if @restaurant.errors.any? %>
  <ul>
    <% @restaurant.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  
  <p><%= r.label :name %>
  <%= r.text_field :name %></p>
  <p><%= r.label :address %>
  <%= r.text_field :address %></p>
  <p><%= r.label :borough %>
  <%= r.text_field :borough %></p>
  <p><%= r.label :phone %>
  <%= r.text_field :phone %></p>
  <p><%= r.label :cuisine %>
  <%= r.text_field :cuisine %></p>

  <h3>Menu Items to Try</h3>
  <%= r.fields_for :foods do |f| %>
    <p><%= f.label :name, "Menu Item Name" %>
    <%= f.text_field :name %>
    <p><%= f.label :price %>
    <%= f.text_field :price %></p>
  <% end %>
  <%= r.submit %>
<% end %>
