<h2><%= @restaurant.name %></h2>
<%= @restaurant.address %><br>
<%= number_to_phone(@restaurant.phone, area_code: true) %><br>
<%= @restaurant.cuisine %> | <%= @restaurant.borough %><br>
<%= link_to "View on Google Maps", "https://www.google.com/maps/search/#{@restaurant.address}" %>

<p><%= link_to "Add Food Review", new_restaurant_food_path(@restaurant.id) %></p>

<h3>What's good here?</h3>

<%= @restaurant.foods.each do |food| %>
  <%= food.name %>
<% end %>
